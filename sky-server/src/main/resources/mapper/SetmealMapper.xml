    <select id="pageSelete" resultType="com.sky.vo.SetmealVO">

        select a.*,c.name AS categoryName
        from setmeal a left outer join category c on a.category_id = c.id
        <where>
            <if test="name !=null ">
                and a.name like concat('%',#{name},'%')
            </if>
            <if test="status !=null ">
                and a.status like concat('%',#{status},'%')
            </if>
            <if test="categoryId !=null ">
                and a.category_id like concat('%',#{categoryId},'%')
            </if>

        </where>
        order by a.create_time desc

