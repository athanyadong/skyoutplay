<mapper namespace="com.sky.mapper.SetmealMapper">
    <delete id="deleteByIds" parameterType="list">
        DELETE FROM setmeal
        where id in
        <foreach collection="list" item="as" separator="," open="(" close=")">
            #{as}
        </foreach>
    </delete>
